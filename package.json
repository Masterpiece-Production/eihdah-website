{
  "name": "eihdah-website",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "generate": "python render_static.py",
    "build": "npm run generate && webpack --config webpack.config.mjs --mode production && npm run critical-css",
    "dev": "python render_static.py && webpack serve --config webpack.config.mjs",
    "lint": "eslint frontend/js --ext .js",
    "test:og": "python scripts/test_og_tags.py",
    "test:a11y": "node scripts/test_accessibility.js",
    "test:cls": "node scripts/test_cls.js",
    "test:mobile": "node scripts/test_mobile_layout.js",
    "test:form": "node scripts/test_form_integration.js",
    "test:perf": "npm run test:cls && npm run test:mobile",
    "test:all": "npm run test:a11y && npm run test:perf && npm run test:og && npm run test:form",
    "critical-css": "node scripts/extract_critical_css.js",
    "optimize-images": "python scripts/png2webp.py && python scripts/add_image_dimensions.py"
  },
  "browserslist": [
    "defaults",
    "not IE 11",
    "maintained node versions"
  ],
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "aos": "^2.3.4",
    "bootstrap": "^5.3.3"
  },
  "devDependencies": {
    "@axe-core/puppeteer": "^4.8.5",
    "@babel/core": "^7.24.3",
    "@babel/preset-env": "^7.24.3",
    "@lhci/cli": "^0.13.0",
    "autoprefixer": "^10.4.16",
    "babel-loader": "^9.1.3",
    "clean-webpack-plugin": "^4.0.0",
    "critical": "^7.2.1",
    "critical-css-webpack-plugin": "^3.0.0",
    "css-loader": "^6.10.0",
    "css-minimizer-webpack-plugin": "^5.0.1",
    "eslint": "^8.57.0",
    "glob": "^11.0.3",
    "html-webpack-plugin": "^5.6.3",
    "lighthouse": "^11.5.0",
    "mini-css-extract-plugin": "^2.9.0",
    "postcss": "^8.4.31",
    "postcss-loader": "^7.3.3",
    "puppeteer": "^22.5.0",
    "purgecss-webpack-plugin": "^7.0.2",
    "sass": "^1.76.0",
    "sass-loader": "^15.0.0",
    "terser-webpack-plugin": "^5.3.14",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.4"
  }
}
